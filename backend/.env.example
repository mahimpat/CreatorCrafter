# Application
DEBUG=True

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/creatorcrafter

# JWT Authentication
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Storage
STORAGE_PATH=./storage
MAX_UPLOAD_SIZE=524288000

# Celery (optional - for production)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# AI Models
# Whisper model for speech-to-text (supports 99+ languages including Kannada, Hindi, Tamil, etc.)
# Options: tiny, base, small, medium, large
# - "base" (~140MB): Good for English, basic multilingual
# - "medium" (~1.5GB): Recommended for Indian languages (Kannada, Hindi, Tamil, Telugu, etc.)
# - "large" (~3GB): Best accuracy for all languages
WHISPER_MODEL=medium
BLIP_MODEL=Salesforce/blip-image-captioning-base

# ElevenLabs API for SFX generation
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Optional: LLM APIs for intelligent audio descriptions
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Forms Integration (for external feedback collection)
# To get form ID and entry IDs:
# 1. Create a Google Form with fields: Rating, Would Recommend, Use Case, Feature Request, Pain Points, Feedback, Email
# 2. Click "Get pre-filled link" from the 3-dot menu
# 3. Fill in dummy values and click "Get Link"
# 4. The URL contains: forms/d/e/{FORM_ID}/viewform?usp=pp_url&entry.XXXXX=value
# 5. Extract the FORM_ID and entry.XXXXX IDs for each field
# GOOGLE_FORM_ID=1FAIpQLSc...
# GOOGLE_FORM_ENTRY_RATING=entry.123456789
# GOOGLE_FORM_ENTRY_RECOMMEND=entry.987654321
# GOOGLE_FORM_ENTRY_USE_CASE=entry.111111111
# GOOGLE_FORM_ENTRY_FEATURE_REQUEST=entry.222222222
# GOOGLE_FORM_ENTRY_PAIN_POINTS=entry.333333333
# GOOGLE_FORM_ENTRY_FEEDBACK=entry.444444444
# GOOGLE_FORM_ENTRY_EMAIL=entry.555555555
